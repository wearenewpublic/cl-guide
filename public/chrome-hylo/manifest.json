{
    "manifest_version": 3,
    "name": "New Public Hylo Guide",
    "version": "1.0",
    "description": "Adds the guide sidebar to Hylo",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["*://*.hylo.com/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
